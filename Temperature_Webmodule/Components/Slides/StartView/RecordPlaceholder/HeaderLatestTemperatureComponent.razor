@using TempraturModul.Models
@using TemperatureModule.Webpage.Models

<div style="padding-top: 12px;
        padding-bottom: 6px;
        padding-left: 20px;
        padding-right: 20px;
        font-size: 24px;
        border-bottom: 1px solid rgba(0,0,0,.125);
        display: flex;
        flex-direction: row;
        align-items:baseline;
        flex-wrap:wrap;
">
    <strong class="order-1">@_medium temperature:</strong>
</div>

@code {
    [Parameter]
    public UnitData Latest { get; set; }

    [Parameter]
    public PTIndex PTIndex { get; set; }

    private string _medium { get { return PTIndex == PTIndex.Water ? "Water" : "Air"; } }

}